<?xml version="1.0"?>
<ruleset name="Factory Pattern Library">
    <description>Правила кодирования для Factory Pattern Library</description>
    
    <!-- Базовые стандарты -->
    <rule ref="PSR12"/>
    
    <!-- Исключения -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/coverage/*</exclude-pattern>
    <exclude-pattern>*/build/*</exclude-pattern>
    <exclude-pattern>*/dist/*</exclude-pattern>
    
    <!-- Файлы для проверки -->
    <file>src</file>
    <file>tests</file>
    <file>example.php</file>
    <file>composer.json</file>
    <file>phpunit.xml</file>
    <file>.php-cs-fixer.php</file>
    <file>phpcs.xml</file>
</ruleset>